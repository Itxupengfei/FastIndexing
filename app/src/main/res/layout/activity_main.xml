<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:indexattrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55342444"
    tools:context="com.xu.fastindexing.MainActivity">
    com.xu.fastindexing.view.FastIndexingView
    <ListView
        android:id="@+id/lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <com.xu.fastindexing.view.FastIndexingView

        indexattrs:fastindex_textColor="#236734"
        android:id="@+id/fastindext"
        android:layout_alignParentRight="true"
        android:background="#ff0000"
        android:layout_width="50dp"
        android:layout_height="match_parent"/>
</RelativeLayout>
